<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ajayumi.AiXin.App.Wpf.Themes.Default">

    <Style x:Key="NavButton" TargetType="Button" BasedOn="{StaticResource AccentedSquareButtonStyle}" >
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
    </Style>

    <Style x:Key="SignOutButton" TargetType="Button" BasedOn="{StaticResource AccentedSquareButtonStyle}" >
        <Setter Property="Width" Value="50" />
        <Setter Property="Height" Value="50" />
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource WhiteColorBrush}" />
        <Setter Property="Background" Value="{DynamicResource BlackColorBrush}" />

    </Style>

</ResourceDictionary>